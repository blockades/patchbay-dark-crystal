DarkCrystal -show {
  position: relative

  div.Back {
    position: absolute
    top: 2.4rem

    i.fa {
      cursor: pointer

      :hover {
        transition: color 0.2s ease-in
        color: rebeccapurple
      }
    }
  }

  h2 {
    margin: 0
  }


  section.shards {
    display: grid
    align-content: start
    grid-gap: 1rem
  }
}
