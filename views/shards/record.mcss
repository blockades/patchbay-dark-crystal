DarkCrystalShardsRecord {
  padding: 1rem
  border: 1px solid black
  
  display: grid
  grid-template-columns: auto 1fr auto
  justify-content: start
  grid-row-gap: 1rem
  grid-column-gap: 4rem

  div.author {
    grid-column: 1
    grid-row: 1 / 3

    max-height: 4rem
  }

  div.history {
    grid-column: 2

    display: grid
    grid-gap: .5rem

    div.historyItem {
      display: grid
      grid-template-columns: 13rem auto
      grid-gap: 2rem
      justify-content: start

      div.Timestamp {
        color: darkgrey
        font-family: sans
        letter-spacing: 2px
        font-size: .8rem

        visibility: hidden
      }

      div.action {
        display: grid
        grid-gap: .5rem
        grid-template-columns: 1rem 1rem auto
        align-items: baseline
        justify-content: start

        -shard-return { color: deeppink }

      }

      :hover {
        div.Timestamp { visibility: visible }
      }
    }
  }

  div.request {
    grid-column: 3

    button {
      border: none
      justify-self: end
      background: #9754de
      color: white
      :hover {
        transition: background .5s ease-in
        background: deeppink
      }
    }
  }
}
