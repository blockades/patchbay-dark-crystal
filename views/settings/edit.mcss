Settings {
  font-family: sans, sans-serif, arial
  font-size: 1rem
  color: #fff
  background: #000

  width: 50rem
  min-height: 32rem

  display: grid
  grid-template-rows: auto auto 1fr

  h1 {
    font-size: 1rem
    text-transform: uppercase
    letter-spacing: 0.4rem

    padding: 2rem
    padding-bottom: 1rem
    margin: 0
  }

  section {
    padding: 1rem 2rem
  }

  section.inputs {
    display: grid
    grid-gap: 1rem

    div {
      div.Cropper {}
      display: grid
      grid-template-columns: 7.5rem 15rem auto;
      align-items: center

      label {
        font-size: .8rem
        text-transform: uppercase
        letter-spacing: .1rem
      }

      input { }
      input.quorum {
        max-width: 18rem
      }
      textarea { min-height: 8rem }
    }

    div.avatar {
      a.Avatar {
        justify-self: center
      }

      img.avatar {
        width: 10rem
        height: 10rem
        justify-self: center
      }
    }
  }

  section.actions {
    display: grid
    padding: 1rem 1rem
    align-self: end
    grid-template-columns: auto auto
    grid-gap: 1rem
  }
}
